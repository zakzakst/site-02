{% extends "_layout/single.njk" %}
{% set pageData = {
  title: "サイト02 - お問い合わせ",
  keywords: "キーワード01,キーワード02,キーワード03,キーワード04,キーワード05",
  description: "ページの概要が入ります。",
  path: "contact/",
  nav: "contact",
  category: "",
  barbaName: ""
} -%}

{% block head_files -%}
{{ super() }}
{%- endblock %}

{% block main_content %}
<div class="content">
  <section class="section">
    <div class="columns is-tablet is-centered">
      <div class="column is-half-tablet">
        <div class="field">
          <label class="label">お名前</label>
          <div class="control has-icons-left">
            <input name="name" class="input" type="text" placeholder="山田 太郎">
            <span class="icon is-left">
              <i class="fas fa-user"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <label class="label">メールアドレス</label>
          <div class="control has-icons-left">
            <input name="email" class="input" type="text" placeholder="sample@mail.co.jp">
            <span class="icon is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <label class="label">お問い合わせ内容</label>
          <div class="control">
            <textarea class="textarea" placeholder="お問い合わせ内容を記載してください"></textarea>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button class="button is-link is-fullwidth">送信</button>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
{% endblock %}

{% block foot_files -%}
{{ super() }}
{%- endblock %}
